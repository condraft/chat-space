.flash-box
  .flash-box__notice 
    グループを作成しました
.wrapper
  .chat-side
    .chat-side__side-header
      .chat-side__side-header__box
        .chat-side__side-header__box__user-name 
          = current_user.name
        .chat-side__side-header__box__menu
          =link_to "", class: "chat-side__side-header__box__menu__new-group" do
            = fa_icon 'edit'
          =link_to edit_user_path(current_user), class: "chat-side__side-header__box__menu__edit-user" do
            = fa_icon 'cog'

    .chat-side__groups
      = render "group"

  .chat-main
    .chat-main__main-header
      .chat-main__main-header__left-box
        .chat-main__main-header__left-box__current-group
          test-group1
        .chat-main__main-header__left-box__menber-list
          Member：
          .chat-main__main-header__left-box__member-list__member
            test-user
      .chat-main__main-header__edit-btn
        Edit
    .chat-main__messages
      = render "message"

    .chat-main__form
      %form#new_message.new_message{"accept-charset" => "UTF-8", :action => "/groups/1967/messages", :enctype => "multipart/form-data", :method => "post"}
        %input{:name => "utf8", :type => "hidden", :value => "✓"}/
        %input{:name => "authenticity_token", :type => "hidden", :value => "2uXeCmlq7nx7x3Z9r21/OyeIXsgLZsgpAMDllkPmujB3WwDQ6pa3/3w/yp/M95kDbimdNzKADBnILoHqqVgY+g=="}/
        .chat-main__form__input-box
          %input#message_content.input-box__text{:name => "message[content]", :placeholder => "type a message", :type => "text"}/
          %label.chat-main__form__input-box__image{:for => "message_image"}
            %i.fa.fa-image
            %input#message_image.input-box__image__file{:name => "message[image]", :type => "file"}/
        %input.chat-main__form__input-box__submit-btn{"data-disable-with" => "Send", :name => "commit", :type => "submit", :value => "Send"}/